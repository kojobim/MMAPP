<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>msf4j-service</artifactId>
    <groupId>org.wso2.msf4j</groupId>
    <version>2.6.2</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.bim</groupId>
  <artifactId>BIMWso2EIMicroservice</artifactId>
  <name>BIMWso2EIMicroservice</name>
  <version>1.0.0</version>
  <build>
    <finalName>bim-wso2-ei-microservice</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.0</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifestEntries>
              <Microservices>${microservice.resourceClasses}</Microservices>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <microservice.resourceClasses>com.bim.msf4j.ctrl.InversionesCtrl,com.bim.msf4j.ctrl.LoginCtrl,com.bim.msf4j.ctrl.PingCtrl,com.bim.msf4j.ctrl.CuentasCtrl,com.bim.msf4j.ctrl.UsuarioCtrl,com.bim.msf4j.ctrl.CuentaDestinoCtrl</microservice.resourceClasses>
  </properties>
</project>

