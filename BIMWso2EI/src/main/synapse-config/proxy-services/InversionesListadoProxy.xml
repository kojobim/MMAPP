<?xml version="1.0" encoding="UTF-8"?>
<proxy name="InversionesListadoProxy" startOnLoad="true" transports="http https" xmlns="http://ws.apache.org/ns/synapse">
    <target>
        <inSequence>
            <log level="full"/>
            <property expression="json-eval($.tipConsul)" name="tipConsul" scope="default" type="STRING"/>
            <property expression="json-eval($.numTransac)" name="numTransac" scope="default" type="STRING"/>
            <property expression="json-eval($.transaccio)" name="transaccio" scope="default" type="STRING"/>
            <property expression="json-eval($.usuario)" name="usuario" scope="default" type="STRING"/>
            <property expression="json-eval($.fechaSis)" name="fechaSis" scope="default" type="STRING"/>
            <property expression="json-eval($.sucOrigen)" name="sucOrigen" scope="default" type="STRING"/>
            <property expression="json-eval($.sucDestino)" name="sucDestino" scope="default" type="STRING"/>
            <property expression="json-eval($.modulo)" name="modulo" scope="default" type="STRING"/>
            <log>
                <property expression="json-eval($)" name="Before enrich"/>
            </log>
            <enrich>
                <source clone="true" type="body"/>
                <target property="ORIGINAL_REQ" type="property"/>
            </enrich>
            <enrich>
                <source clone="true" type="body"/>
                <target property="REQUEST_PAYLOAD" type="property"/>
            </enrich>
            <log>
                <property expression="get-property('ORIGINAL_REQ')" name="Original Request Symbol"/>
                <property expression="json-eval($)" name="Response Payload"/>
            </log>
            <send>
                <endpoint>
                    <address uri="http://localhost:8280/services/configuration-service/getBankConfigurationSQLOp"/>
                </endpoint>
            </send>
        </inSequence>
        <outSequence>
            <log>
                <property expression="get-property('ORIGINAL_REQ')" name="Original Request Symbol"/>
                <property expression="json-eval($)" name="Response Payload"/>
            </log>
            <send/>
        </outSequence>
        <faultSequence/>
    </target>
</proxy>
